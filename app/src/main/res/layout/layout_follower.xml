<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llnclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgavtar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder"
                android:visibility="visible" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/lnright"
                android:layout_weight="1.2"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtuname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:singleLine="true"
                    android:text="Riya_1295"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:singleLine="true"
                    android:text="Riya Patel"
                    android:textColor="#E4E4E4"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnright"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|end|center"
                android:layout_weight="0.8"
                android:gravity="right|end|center"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:id="@+id/txtfolllow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_profile"
                    android:backgroundTint="@color/follow_accept_color"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:text="Follow"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/imgdone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_check"
                    android:tint="@color/darkgreen"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgcancel"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/cancel"
                    android:tint="@color/textcolor"
                    android:visibility="gone" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>