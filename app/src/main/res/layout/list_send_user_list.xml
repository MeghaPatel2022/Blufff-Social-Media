<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_12sdp"
            android:src="@color/follow_accept_color"
            app:civ_border_color="@color/grey"
            app:civ_border_width="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/img_user"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:text="TBI Temp"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />

            <com.hendraanggrian.appcompat.widget.SocialTextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_fullname"
                android:gravity="start|center"
                android:text="tbi123"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                app:socialFlags="mention" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_chek"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/tick_grey" />

        <ImageView
            android:id="@+id/img_unchek"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/tick_blue"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>