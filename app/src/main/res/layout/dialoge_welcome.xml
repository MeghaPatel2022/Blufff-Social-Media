<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp5"
                android:text="@string/welcome"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/header_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/galada_regular"
                android:lineSpacingExtra="@dimen/dp5"
                android:text=" Blufff"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/header_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_header"
            android:layout_marginTop="@dimen/dp5"
            android:lineSpacingExtra="@dimen/dp5"
            android:text="@string/start_msg"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_welcome_next"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_below="@+id/header_title2"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="40sp"
            android:layout_marginRight="15sp"
            android:layout_weight="1.0"
            android:background="@drawable/shape_rounded"
            android:backgroundTint="#1B4C78"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:padding="10dp"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_change_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_welcome_next"
            android:layout_marginTop="@dimen/dp15"
            android:lineSpacingExtra="@dimen/dp5"
            android:text="Change username"
            android:textAlignment="center"
            android:textColor="#7786F8"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp20"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" By clicking to next, you agree to our  "
            android:textAlignment="center"
            android:textSize="9dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="terms, "
            android:textAlignment="center"
            android:textColor="#7786F8"
            android:textSize="9dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="data policy"
            android:textAlignment="center"
            android:textColor="#7786F8"
            android:textSize="9dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" and "
            android:textAlignment="center"
            android:textSize="9dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cooki policy"
            android:textAlignment="center"
            android:textColor="#7786F8"
            android:textSize="9dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>