                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Business Sub-topics"
                    android:textColor="@color/blacklight"
                    android:textSize="16dp" />


                <EditText
                    android:id="@+id/edtsubtopic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?attr/colorPrimary"
                    android:fontFamily="@font/poppins_regular"
                    android:singleLine="true"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Business Proof"
                    android:textColor="@color/blacklight"
                    android:textSize="16dp" />

                <LinearLayout
                    android:id="@+id/lnbusinessproof"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/document"
                        android:tint="?attr/colorPrimary"></ImageView>

                    <TextView
                        android:id="@+id/edtbusinessproof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/poppins_regular"
                        android:singleLine="true"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorPrimary"></View>

                <Button
                    android:id="@+id/btnsubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/edit_profile"
                    android:backgroundTint="@color/textcolor"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:paddingLeft="30dp"
                    android:paddingTop="5dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="5dp"
                    android:text="Submit"
                    android:textColor="?attr/background"
                    android:textSize="20dp"></Button>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>