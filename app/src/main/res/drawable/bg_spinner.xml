<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@android:color/transparent" android:startColor="@android:color/transparent" android:type="linear" />

                    <stroke android:width="0dp" />
                    <corners android:radius="50dp" />
                    <padding android:left="5dp" android:right="15dp" />
                </shape>
            </item>

            <item android:right="5dp">

                <bitmap android:gravity="center_vertical|right" android:padding="10dp" android:src="@drawable/down_arrow" android:tint="@color/blacklight" />

            </item>

        </layer-list>

    </item>

</selector>
