<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->


    <style name="ActivityTheme.Primary.Base.Light" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/white</item>
        <item name="colorError">@color/white</item>
        <item name="controlBackground">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
    </style>


    <style name="ActivityTheme.Primary.Base.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/black</item>
        <item name="colorError">@color/blackdark</item>
        <item name="controlBackground">#4C4B5E</item>
        <item name="android:windowDisablePreview">true</item>
    </style>


    <!--http://stackoverflow.com/questions/21536018/android-get-support-action-bar-always-returns-null
    use android:windowNoTitle as false-->


    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="ToolbarSubtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Applozic_PopUpTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Applozic_FullScreen_Theme" parent="ActivityTheme.Primary.Base.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>