<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:singleLine="true"
            android:text="Group Info"
            android:textColor="?attr/colorPrimary"
            android:textSize="20dp" />


    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/applozic_group_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/applozic_group_icon"
            android:tint="?attr/colorPrimary"
            app:civ_border_color="?attr/colorPrimary"></de.hdodenhof.circleimageview.CircleImageView>


        <ImageView
            android:id="@+id/applozic_group_profile_camera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/applozic_group_profile"
            android:layout_alignRight="@+id/applozic_group_profile"
            android:layout_alignBottom="@+id/applozic_group_profile"
            android:background="@drawable/circle"
            android:backgroundTint="?attr/colorPrimary"
            android:clickable="true"
            android:padding="5dp"
            android:src="@drawable/applozic_ic_action_edit"
            android:tint="?attr/background" />
    </RelativeLayout>


    <EditText
        android:id="@+id/newChannelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#4C4B5E"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Name of group"
        android:inputType="textCapWords"
        android:maxLength="255"
        android:textColor="?attr/colorPrimary"
        android:textColorHint="#4C4B5E"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal|right|end"
        android:layout_marginTop="30dp"
        android:background="?attr/background"
        android:gravity="center|right|end"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/channelNameOk"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right|end"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/done1"
            android:tint="#ff0000" />

        <Button
            android:id="@+id/channelNameCancel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:visibility="gone" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/ok_alert"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footerAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:visibility="gone"></LinearLayout>

</LinearLayout>